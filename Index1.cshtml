            <!-- Table of Memoirs -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.DateWritten)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.DateWritten)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle AJAX form submission for search
        $(function () {
            $('#search-form').submit(function (e) {
                e.preventDefault(); // Prevent default form submission
                var query = $(this).serialize(); // Serialize form data
                $.ajax({
                    url: '@Url.Action("Index1", "ControllerName")', // Adjust the URL to point to your controller
                    type: 'GET',
                    data: query, // Pass serialized form data as query parameters
                    success: function (result) {
                        $('#search-results').html(result); // Replace search results with received HTML
                    }
                });
            });
        });
    </script>
}


