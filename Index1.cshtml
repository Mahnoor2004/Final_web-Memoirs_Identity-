@{
}

@model IEnumerable<WebApplication1.Models.Memoirs>

@{
    ViewData["Title"] = "Memoirs List";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1 class="container-fluid text-center mt-4"><b>Memoirs List</b></h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p>
                <a asp-action="Create" class="btn btn-primary">Create New Memoir</a>
            </p>
            
            <!-- Table of Memoirs -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.DateWritten)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.DateWritten)</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


}


@section EntriesCss {
    <link rel="stylesheet" href="~/css/Entriescss.css" asp-append-version="false" />
}
