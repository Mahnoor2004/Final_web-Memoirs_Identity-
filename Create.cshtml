            </div> *@
            <div class="mb-3">
                <label for="Tags" class="form-label">Tags</label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="DateWritten" class="form-label">Date Written</label>
                <input asp-for="DateWritten" class="form-control" />
                <span asp-validation-for="DateWritten" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary" style="width:100%">Create</button>
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>
