@model WebApplication1.Models.Memoirs
@{
    ViewData["Title"] = "Edit Memoir";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h1 class="text-center">Edit Memoir</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Update">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Content</label>
                    <textarea id="editor" asp-for="Content" class="form-control" rows="6"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tags" class="control-label">Tags</label>
                    <input asp-for="Tags" class="form-control" />
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>

                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary">Update Memoir</button>
                    <a asp-action="Index1" class="btn btn-secondary mx-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/34.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
}

@section EntriesCss {
    <link rel="stylesheet" href="~/css/Entriescss.css" asp-append-version="false" />
}
