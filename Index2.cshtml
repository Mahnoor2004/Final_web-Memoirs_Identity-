@model IEnumerable<WebApplication1.Models.Memoirs>

@{
    ViewData["Title"] = "Choose Memoir to Update";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<section class="container" style="color:wheat;">
    <div class="row justify-content-center align-items-center py-5">
        <div class="col-12 text-center" style="padding: 40px;">
            <span class="display-2"><b>Save your Memories</b></span>
        </div>
        <div class="col-12 mt-3">
            <form asp-controller="Entries" asp-action="SelectMemoirToUpdate" method="post">
                <h2>Select Memoir to Update:</h2>
                @foreach (var memoir in Model)
                {
                    <div>
                        <input type="radio" id="@("memoir_" + memoir.Id)" name="selectedMemoirId" value="@memoir.Id" required>
                        <label for="@("memoir_" + memoir.Id)">@memoir.Title</label>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Update Selected Memoir</button>
            </form>
        </div>
    </div>
</section>

@section EntriesCss {
    <link rel="stylesheet" href="~/css/Entriescss.css" asp-append-version="false" />
}

