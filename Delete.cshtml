@model WebApplication1.Models.Memoirs

@{
    ViewData["Title"] = "Delete Memoir";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div style="max-width: 600px; margin: auto;">
    <h1 style="text-align: center; margin-bottom: 20px;">Delete Memoir</h1>

    <div style="background-image: linear-gradient(to right, #ff7e5f, #feb47b, #86a8e7);padding: 20px; border-radius: 10px;">
        <p style="font-size: 18px;">Are you sure you want to delete this memoir?</p>

        <div style="margin-top: 20px;">
            <h4>Memoirs</h4>
            <hr style="margin-top: 5px; margin-bottom: 15px;" />
            <dl class="row">
                <dt class="col-sm-2">
                    <strong>Title:</strong>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
            </dl>
        </div>

        <form asp-action="Delete" style="margin-top: 20px;">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger" style="margin-right: 10px;">Delete</button>
            <a asp-action="Index1" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
